generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Enum for types of image transformations
enum TransformationType {
  RESTORE
  GENERATIVE_FILL
  OBJECT_REMOVE
  OBJECT_RECOLOR
  BACKGROUND_REMOVE
  BACKGROUND_REPLACE
}

// User model (linked to Clerk)
model User {
  id                     String           @id @default(auto()) @map("_id") @db.ObjectId
  clerkId                String           @unique
  name                   String
  email                  String           @unique
  creditsAvailable       Int              @default(0)
  imageManipulationsDone Int              @default(0)
  createdAt              DateTime         @default(now())
  updatedAt              DateTime         @updatedAt
  transformations        Transformation[] // relation to transformations
}

// Transformation model
model Transformation {
  id          String             @id @default(auto()) @map("_id") @db.ObjectId
  user        User               @relation(fields: [userId], references: [id])
  userId      String             @db.ObjectId
  title       String
  type        TransformationType
  // prompt      String? // optional prompt text
  // size        String? // optional image size info
  url         String? // transformed image URL
  originalUrl String? // original image URL
  metadata    Json? // extra transformation data (object to remove, recolor, etc.)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}
