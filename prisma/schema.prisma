generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum TransformationType {
  RESTORE
  GENERATIVE_FILL
  OBJECT_REMOVE
  OBJECT_RECOLOR
  BACKGROUND_REMOVE
  BACKGROUND_REPLACE
}

model User {
  id                     String           @id @default(auto()) @map("_id") @db.ObjectId
  clerkId                String           @unique
  name                   String
  email                  String           @unique
  creditsAvailable       Int              @default(0)
  imageManipulationsDone Int              @default(0)
  createdAt              DateTime         @default(now())
  updatedAt              DateTime         @updatedAt
  transformations        Transformation[] @relation("UserTransformations")
}

model Transformation {
  id          String             @id @default(auto()) @map("_id") @db.ObjectId
  user        User               @relation("UserTransformations", fields: [userId], references: [id])
  userId      String             @db.ObjectId
  title       String
  type        TransformationType
  prompt      String?
  size        String?
  url         String?
  originalUrl String?
  metadata    Json?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}
